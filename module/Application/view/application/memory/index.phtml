<?php
$headTitle = $this->translate('Memories');
$this->headTitle($headTitle);
?>
<center><div class="title icon48 memory" ><?= $this->escapeHtml($headTitle); ?></div></center>
<div class="content">
    <a class="icon12 new" href="<?= $this->url('memory', ['action' => 'add']); ?>">
        <?= $this->translate('Add new memory') ?>
    </a>
    <table>
        <tr>
            <th><?= $this->translate('DIMM') ?></th>
            <th><?= $this->translate('Name') ?></th>
            <th><?= $this->translate('Description') ?></th>
            <th>&nbsp;</th>
        </tr>
