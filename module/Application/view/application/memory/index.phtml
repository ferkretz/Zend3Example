                <td>
                    <a class="icon12 edit cell" href="<?=
                    $this->url(
                            'memory', ['action' => 'edit', 'id' => $memory->getId()]
                    )
                    ?>"><?= $this->translate('Edit') ?></a>
                    <a class="icon12 remove cell" href="<?=
                    $this->url(
                            'memory', ['action' => 'delete', 'id' => $memory->getId()]
                    )
                    ?>"><?= $this->translate('Remove') ?></a>
                </td>
            </tr>
        <?php endforeach; ?>
    </table>
</div>